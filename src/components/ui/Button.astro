---
interface Props {
  variant?: 'primary' | 'secondary' | 'ghost' | 'outline';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  icon?: string;
  fullWidth?: boolean;
  type?: 'button' | 'submit' | 'reset';
  class?: string;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  icon,
  fullWidth = false,
  type = 'button',
  class: className = '',
} = Astro.props;

const Tag = href ? 'a' : 'button';

const baseStyles = 'inline-flex items-center justify-center font-semibold rounded-lg transition-all duration-300 no-underline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[var(--color-gold)]';

const variants = {
  primary: 'bg-[var(--color-gold)] text-white hover:bg-[var(--color-gold-dark)] active:scale-[0.98] shadow-md hover:shadow-lg',
  secondary: 'bg-[var(--color-navy)] text-white hover:bg-[var(--color-navy-light)] active:scale-[0.98]',
  ghost: 'text-[var(--color-gold)] hover:bg-[var(--color-gold)]/10 active:scale-[0.98]',
  outline: 'border-2 border-[var(--color-gold)] text-[var(--color-gold)] hover:bg-[var(--color-gold)] hover:text-white active:scale-[0.98]',
};

const sizes = {
  sm: 'text-sm px-4 py-2 gap-2',
  md: 'text-base px-6 py-3 gap-2',
  lg: 'text-lg px-8 py-4 gap-3',
};
---

<Tag
  href={href}
  type={!href ? type : undefined}
  class:list={[baseStyles, variants[variant], sizes[size], fullWidth && 'w-full', className]}
>
  <slot />
  {icon && <span class="icon" aria-hidden="true">{icon}</span>}
</Tag>
