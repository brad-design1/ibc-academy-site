---
import Badge from './Badge.astro';

interface Props {
  title: string;
  description: string;
  href?: string;
  badge?: string;
  class?: string;
}

const {
  title,
  description,
  href,
  badge,
  class: className = '',
} = Astro.props;

const Tag = href ? 'a' : 'div';
---

<Tag
  href={href}
  class:list={[
    'block rounded-lg shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden bg-white dark:bg-[var(--bg-secondary)] hover:translate-y-[-2px] no-underline',
    href && 'cursor-pointer',
    className,
  ]}
>
  <slot name="image" />
  <div class="p-6">
    {badge && <Badge variant="gold" class="mb-3">{badge}</Badge>}
    <h3 class="text-xl font-semibold text-[var(--color-navy)] dark:text-white mb-2" style="font-family: var(--font-heading);">
      {title}
    </h3>
    <p class="text-[var(--color-text-secondary)] dark:text-[var(--color-text-muted)] leading-relaxed">
      {description}
    </p>
  </div>
</Tag>
