---
interface Props {
  variant?: 'default' | 'gold' | 'navy' | 'success';
  class?: string;
}

const {
  variant = 'default',
  class: className = '',
} = Astro.props;

const variants = {
  default: 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200',
  gold: 'bg-[var(--color-gold)] text-white',
  navy: 'bg-[var(--color-navy)] text-white',
  success: 'bg-[var(--color-success)] text-white',
};
---

<span
  class:list={[
    'inline-flex items-center text-xs font-medium px-2.5 py-0.5 rounded-full',
    variants[variant],
    className,
  ]}
>
  <slot />
</span>
