---
import Button from '../ui/Button.astro';

interface Props {
  title: string;
  subtitle: string;
  primaryCta?: { text: string; href: string };
  secondaryCta?: { text: string; href: string };
}

const { title, subtitle, primaryCta, secondaryCta } = Astro.props;
---

<section class="hero">
  <div class="hero-overlay" aria-hidden="true"></div>
  <div class="hero-content">
    <h1 class="hero-title">{title}</h1>
    <p class="hero-subtitle">{subtitle}</p>
    {(primaryCta || secondaryCta) && (
      <div class="hero-actions">
        {primaryCta && (
          <Button variant="primary" size="lg" href={primaryCta.href}>
            {primaryCta.text}
          </Button>
        )}
        {secondaryCta && (
          <Button variant="outline" size="lg" href={secondaryCta.href} class="hero-secondary-btn">
            {secondaryCta.text}
          </Button>
        )}
      </div>
    )}
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(
      135deg,
      var(--color-navy-dark, #0F1D35) 0%,
      var(--color-navy, #1B2A4A) 100%
    );
    overflow: hidden;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: radial-gradient(
      ellipse at 30% 50%,
      rgba(200, 150, 46, 0.08) 0%,
      transparent 60%
    );
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
    padding: 2rem 1rem;
    text-align: center;
  }

  @media (min-width: 768px) {
    .hero-content {
      text-align: left;
      padding: 4rem 2rem;
    }
  }

  .hero-title {
    font-family: 'Playfair Display', serif;
    font-weight: 700;
    font-size: 2.5rem;
    line-height: 1.2;
    letter-spacing: -0.02em;
    color: #ffffff;
    margin: 0 0 1.5rem 0;
    max-width: 800px;
  }

  @media (min-width: 768px) {
    .hero-title {
      font-size: 4rem;
    }
  }

  .hero-subtitle {
    font-family: 'Inter', sans-serif;
    font-size: 1.125rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.8);
    margin: 0 0 2rem 0;
    max-width: 600px;
  }

  @media (min-width: 768px) {
    .hero-subtitle {
      font-size: 1.25rem;
    }
  }

  @media (max-width: 767px) {
    .hero-subtitle {
      margin-left: auto;
      margin-right: auto;
    }
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
  }

  @media (min-width: 768px) {
    .hero-actions {
      justify-content: flex-start;
    }
  }

  /* Override outline button colors for dark background */
  .hero-secondary-btn {
    border-color: #ffffff;
    color: #ffffff;
  }

  .hero-secondary-btn:hover {
    background-color: rgba(255, 255, 255, 0.15);
    border-color: #ffffff;
    color: #ffffff;
  }
</style>
