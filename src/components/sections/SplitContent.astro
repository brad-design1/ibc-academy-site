---
import Button from '../ui/Button.astro';

interface Props {
  title: string;
  description: string;
  ctaText?: string;
  ctaHref?: string;
  imagePosition?: 'left' | 'right';
  imageSrc: string;
  imageAlt: string;
}

const {
  title,
  description,
  ctaText,
  ctaHref,
  imagePosition = 'left',
  imageSrc,
  imageAlt,
} = Astro.props;

const isImageRight = imagePosition === 'right';
---

<div class:list={['split-content', { 'split-content-reversed': isImageRight }]}>
  <div class="split-image">
    <img src={imageSrc} alt={imageAlt} class="split-img" loading="lazy" />
  </div>
  <div class="split-text">
    <h2 class="split-title">{title}</h2>
    <p class="split-description">{description}</p>
    {ctaText && ctaHref && (
      <div class="split-cta">
        <Button variant="primary" href={ctaHref}>
          {ctaText}
        </Button>
      </div>
    )}
  </div>
</div>

<style>
  .split-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2.5rem;
    align-items: center;
  }

  @media (min-width: 1024px) {
    .split-content {
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
    }
  }

  /* When imagePosition is 'right', reorder so image appears after text on desktop */
  @media (min-width: 1024px) {
    .split-content-reversed .split-image {
      order: 2;
    }

    .split-content-reversed .split-text {
      order: 1;
    }
  }

  .split-image {
    width: 100%;
  }

  .split-img {
    width: 100%;
    height: auto;
    border-radius: 0.5rem;
    box-shadow:
      0 10px 15px -3px rgba(0, 0, 0, 0.1),
      0 4px 6px -4px rgba(0, 0, 0, 0.1);
  }

  .split-text {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .split-title {
    font-family: 'Playfair Display', serif;
    font-weight: 700;
    font-size: 2rem;
    line-height: 1.2;
    letter-spacing: -0.02em;
    color: var(--color-navy, #1B2A4A);
    margin: 0;
  }

  @media (min-width: 768px) {
    .split-title {
      font-size: 2.5rem;
    }
  }

  .split-description {
    font-family: 'Inter', sans-serif;
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-text-secondary, #5A6B8A);
    margin: 0;
  }

  .split-cta {
    margin-top: 0.5rem;
  }
</style>
