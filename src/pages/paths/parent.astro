    margin-bottom: 0.75rem;
  }

  .journey-title {
    font-family: 'Playfair Display', serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-navy, #1B2A4A);
    margin: 0 0 0.75rem 0;
  }

  .journey-desc {
    font-family: 'Inter', sans-serif;
    font-size: 0.9375rem;
    line-height: 1.6;
    color: var(--color-text-secondary, #5A6B8A);
    margin: 0;
  }

  /* Why Section */
  .why-content {
    max-width: 700px;
    margin: 0 auto;
    text-align: center;
  }

  .why-text {
    font-family: 'Inter', sans-serif;
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-text-secondary, #5A6B8A);
    margin: 0 0 1.25rem 0;
  }

  .why-quote {
    font-family: 'Playfair Display', serif;
    font-size: 1.5rem;
    font-weight: 500;
    font-style: italic;
    line-height: 1.4;
    color: var(--color-navy, #1B2A4A);
    margin: 2rem 0 0.75rem 0;
    padding: 0 1rem;
    border-left: 4px solid #10B981;
    text-align: left;
  }

  @media (min-width: 768px) {
    .why-quote {
      font-size: 1.75rem;
      padding: 0 2rem;
    }
  }

  .why-attribution {
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    color: var(--color-text-secondary, #5A6B8A);
    margin: 0 0 2rem 0;
    text-align: left;
    padding-left: 1rem;
  }

  @media (min-width: 768px) {
    .why-attribution {
      padding-left: 2rem;
    }
  }

  /* CTA Section */
  .cta-content {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .cta-title {
    font-family: 'Playfair Display', serif;
    font-weight: 700;
    font-size: 2rem;
    color: var(--color-navy, #1B2A4A);
    margin: 0 0 1rem 0;
  }

  .cta-text {
    font-family: 'Inter', sans-serif;
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-text-secondary, #5A6B8A);
    margin: 0 0 2rem 0;
  }

  .cta-button {
    margin-bottom: 1.5rem;
  }

  .cta-note {
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    color: var(--color-text-secondary, #5A6B8A);
    font-style: italic;
    margin: 0;
  }
</style>