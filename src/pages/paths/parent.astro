  }

  .hero-eyebrow {
    display: inline-block;
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #10B981;
    margin-bottom: 1rem;
  }

  .hero-title {
    font-family: 'Playfair Display', serif;
    font-weight: 700;
    font-size: 2.25rem;
    line-height: 1.2;
    letter-spacing: -0.02em;
    color: var(--color-navy, #1B2A4A);
    margin: 0 0 1.5rem 0;
  }

  @media (min-width: 768px) {
    .hero-title {
      font-size: 3rem;
    }
  }

  .hero-text {
    font-family: 'Inter', sans-serif;
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-text-secondary, #5A6B8A);
    margin: 0 0 1rem 0;
  }

  .hero-text:last-child {
    margin-bottom: 0;
  }

  /* Clarity Section */
  .clarity-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .clarity-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  @media (min-width: 768px) {
    .clarity-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  .clarity-box {
    background: var(--color-cream, #FAF9F6);
    border-radius: 12px;
    padding: 2rem;
  }

  .clarity-heading {
    font-family: 'Playfair Display', serif;
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
  }

  .clarity-heading.is-not {
    color: var(--color-text-secondary, #5A6B8A);
  }

  .clarity-heading.is-yes {
    color: var(--color-navy, #1B2A4A);
  }

  .clarity-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .clarity-list li {
    font-family: 'Inter', sans-serif;
    font-size: 1rem;
    line-height: 1.6;
    color: var(--color-text-secondary, #5A6B8A);
    padding: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
  }

  .clarity-list li::before {
    content: "ΓÇó";
    position: absolute;
    left: 0;
    color: #10B981;
  }

  .clarity-footer {
    font-family: 'Inter', sans-serif;
    font-size: 1rem;
    line-height: 1.7;
    color: var(--color-text-secondary, #5A6B8A);
